---
layout: null
sitemap:
  exclude: 'yes'
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    {%- for page in site.pages -%}
        {%- unless page.sitemap.exclude == 'yes' or page.url contains "/assets/" or page.url contains "feed.xml" or page.url contains "404.html" or page.url contains "sitemap.xml" or page.url contains "search.json" or page.url contains "message-sent" or page.url contains "/page" -%}
        <url>
            <loc>{{ page.url | absolute_url }}</loc>
            {%- if page.last_modified_at -%}
                <lastmod>{{ page.last_modified_at | date_to_xmlschema }}</lastmod>
            {%- elsif page.date -%}
                <lastmod>{{ page.date | date_to_xmlschema }}</lastmod>
            {%- endif -%}

            {%- if page.url == "/" or page.url == "" -%}
                <priority>1.0</priority>
                <changefreq>weekly</changefreq>
            {%- else -%}
                <priority>0.7</priority>
                <changefreq>monthly</changefreq>
            {%- endif -%}
        </url>
        {%- endunless -%}
    {%- endfor -%}

    {%- for post in site.posts -%}
        {%- unless post.published == false or post.sitemap.exclude == 'yes' -%}
        <url>
            <loc>{{ post.url | absolute_url }}</loc>
            <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
            <priority>0.9</priority>
            <changefreq>weekly</changefreq>
        </url>
        {%- endunless -%}
    {%- endfor -%}

    {%- for doc in site.authors -%}
        {%- unless doc.published == false or doc.sitemap.exclude == 'yes' -%}
        <url>
            <loc>{{ doc.url | absolute_url }}</loc>
            {%- if doc.last_modified_at -%}
                <lastmod>{{ doc.last_modified_at | date_to_xmlschema }}</lastmod>
            {%- elsif doc.date -%}
                <lastmod>{{ doc.date | date_to_xmlschema }}</lastmod>
            {%- endif -%}
            <priority>0.5</priority>
            <changefreq>monthly</changefreq>
        </url>
        {%- endunless -%}
    {%- endfor -%}
</urlset>